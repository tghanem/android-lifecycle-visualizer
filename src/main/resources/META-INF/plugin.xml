<idea-plugin>
    <id>org.birzeit.swen.AndroidLifecycleAnalyzer</id>
    <version>1.1.0</version>
    <name>Android Lifecycle Visualizer</name>
    <vendor email="timothy.ghanim@gmail.com" url="http://www.birzeit.edu">Birzeit University</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>
        A plugin that allows visualizing Android Activities and the implemented lifecycle callback methods.
    </description>

    <change-notes>
        Initial release of the plugin for testing purposes.
    </change-notes>

    <applicationListeners>
        <listener class="impl.listeners.FileOpenListener"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener" />
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                anchor="bottom"
                factoryClass="windows.WindowFactory"
                id="Activities Navigator" />

        <applicationService
                serviceInterface="interfaces.IActivityFileProcessor"
                serviceImplementation="impl.services.ActivityFileProcessorService"/>

        <applicationService
                serviceInterface="interfaces.IFileProcessor"
                serviceImplementation="impl.services.FileProcessorService" />

        <applicationService
                serviceInterface="interfaces.IActivityViewService"
                serviceImplementation="impl.services.ActivityViewService"/>
    </extensions>
</idea-plugin>
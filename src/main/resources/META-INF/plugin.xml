<idea-plugin>
    <id>org.birzeit.swen.AndroidLifecycleAnalyzer</id>
    <name>Android Lifecycle Visualizer</name>
    <vendor email="timothy.ghanim@gmail.com" url="http://www.birzeit.edu">Birzeit University</vendor>

    <description>
        A plugin that allows visualizing Android Activities and the implemented lifecycle callback methods.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            id="Activities Navigator"
            anchor="bottom"
            factoryClass="windows.WindowFactory"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>